@{
    ViewData["Title"] = "Home Admin";
}

<h1 class="text-center text-primary">GoSport</h1>
<h2 class="text-center text-primary">Welcome Admin - @this.User.Identity.Name</h2>


<div class="row d-flex justify-content-center">
    <div class="col-md-3">
        <div class="card text-center" style="width: 16rem;">
            <div class="text-center">
                <i class="fas fa-users fa-5x"></i>
            </div>
         <div class="card-body">
                <h2 class="card-title text-center">Users</h2>
                <a asp-area="Identity" asp-controller="Users" asp-action="All" class="btn btn-primary">All Users</a>
         </div>
       </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center" style="width: 16rem;">
            <div class="text-center">
                <i class="fas fa-running fa-5x"></i>
            </div>
            <div class="card-body">
                <h2 class="card-title text-center">Sports</h2>
                <a asp-area="" asp-controller="Sports" asp-action="All" class="btn btn-primary">All Sports</a>
            </div>
        </div>
    </div>
     <div class="col-md-3">
        <div class="card text-center" style="width: 16rem;">
            <div class="text-center">
                <i class="fas fa-city fa-5x"></i>
            </div>
            <div class="card-body">
                <h2 class="card-title text-center">Towns</h2>
                <a asp-area="" asp-controller="Towns" asp-action="All" class="btn btn-primary">All Towns</a>
            </div>
        </div>
    </div>
     <div class="col-md-3">
        <div class="card text-center" style="width: 16rem;">
            <div class="text-center">
                <i class="fas fa-dumbbell fa-5x"></i>
            </div>
            <div class="card-body">
                <h2 class="card-title text-center">Disciplines</h2>
                <a asp-area="" asp-controller="Disciplines" asp-action="All" class="btn btn-primary">All Disciplines</a>
            </div>
        </div>
</div>

<p></p>

<div class="row d-flex justify-content-center">
      <div class="col-md-3">
        <div class="card text-center" style="width: 16rem;">
            <div class="text-center">
                <i class="fas fa-briefcase fa-5x"></i>
            </div>
            <div class="card-body">
                <h2 class="card-title text-center">Organizations</h2>
                <a asp-area="" asp-controller="Organizations" asp-action="All" class="btn btn-primary">All Organizations</a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center" style="width: 16rem;">
            <div class="text-center">
                <i class="fas fa-envelope-open-text fa-5x"></i>
            </div>
            <div class="card-body">
                <h2 class="card-title text-center">Messages</h2>
                <a asp-area="" asp-controller="Messages" asp-action="All" class="btn btn-primary">All Messages</a>
            </div>
        </div>
    </div>    
</div>
