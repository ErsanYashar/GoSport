@using GoSport.Core.ViewModel.Organizer
@model OrganizerViewModel

@{
    ViewData["Title"] = "Add";
}


<h1 class="text-center">Add Organizer</h1>

<div class="row text-center">
    <div class="col-md-4 offset-md-4">
        <form asp-area="" asp-controller="Organizers" asp-action="Add" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                    </div>
                    <input asp-for="Name" class="form-control" placeholder="Organizer Name" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-ad"></i></span>
                    </div>
                    <textarea asp-for="Description" class="form-control" rows="10"></textarea>
                </div>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Organizer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>