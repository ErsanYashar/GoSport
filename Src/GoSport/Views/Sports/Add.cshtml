@using GoSport.Core.ViewModel.Sport
@model SportViewModel

@{
    ViewData["Title"] = "Add Sport";
}

<h1 class="text-center text-primary">Add Sport</h1>

<div class="row text-center">
    <div class="col-md-4 offset-md-4">
        <form asp-area="" asp-controller="Sports" asp-action="Add" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-running"></i></span>
                    </div>
                    <input asp-for="Name" class="form-control" placeholder="Sport Name" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-ad"></i></span>
                    </div>
                    <textarea asp-for="Description" class="form-control" rows="10"></textarea>
                </div>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageSportUrl" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-image"></i></span>
                    </div>
                    <input asp-for="ImageSportUrl" class="form-control" placeholder="Sport Image Url" />
                </div>
                <span asp-validation-for="ImageSportUrl" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Add Sport" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<br/>

<div class="text-center">
    <a asp-area="" asp-controller="Sports" asp-action="All">Back to all</a>
</div>